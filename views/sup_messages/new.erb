<h2>Write a new post</h2>

  <form method="POST" action="/messages">
    <label for="name">By: </label>
    <input type="text" name="name" id="name" />

    <br/><br/>

    <label for="message_title">Post Title: </label>
    <input type="text" name="message_title" id="message_title" />

    <br/><br/>

    <label for="message_body">Sup?! </label>
    <input type="text" name="message_body" id="message_body" />

    <br/><br/>

    <label for="message_date">Post Date: </label>
    <input type="text" name="message_date" id="message_date" />

